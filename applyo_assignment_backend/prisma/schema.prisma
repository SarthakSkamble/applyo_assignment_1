generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
}

model Poll{
  poll_id String @id @default(uuid())
  question String 
  createdAt DateTime @default(now())
  options Option[]
  votes Vote[]
  
}

model Option{
  option_id Int @id @default(autoincrement())
  text String  
  poll_id String
  poll Poll @relation(fields: [poll_id], references: [poll_id])
  votes Vote[]
}

model Vote{
  vote_id Int @id @default(autoincrement())
  poll_id String
  option_id Int
  voterToken  String
  createdAt DateTime @default(now())
  poll Poll @relation(fields: [poll_id], references: [poll_id])
  option Option @relation(fields: [option_id], references: [option_id])
  @@unique([poll_id, voterToken])
}